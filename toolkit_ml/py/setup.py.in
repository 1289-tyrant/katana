from setuptools import setup, find_packages, Extension  # Always prefer setuptools over distutils
from codecs import open  # To use a consistent encoding
from os import path
from Cython.Build import cythonize 

here = path.abspath(path.dirname(__file__))

# Get the long description from the relevant file
with open(path.join(here, 'DESCRIPTION.rst'), encoding='utf-8') as f:
    long_description = f.read()

toolkit_ml_ext = Extension('toolkit_ml.svm',
      sources=['toolkit_ml/svm.pyx'],
      libraries=['toolkit_ml'],
      language='c++',
      extra_compile_args=['@py_compile_args@'],
      extra_link_args=['@py_link_args@'])

setup(
    name='gsklearn',
    install_requires=['cython'],
    ext_modules=cythonize([toolkit_ml_ext]),

    # Versions should comply with PEP440.  For a discussion on single-sourcing
    # the version across setup.py and the project code, see
    # http://packaging.python.org/en/latest/tutorial.html#version
